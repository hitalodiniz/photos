{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      // üõ°Ô∏è PROTE√á√ÉO: Permite import do pacote
      "@photos/core-auth": ["./packages/@photos/core-auth/src/index.ts"]
      // ‚ö†Ô∏è Imports internos s√£o bloqueados via ESLint, n√£o via TypeScript paths
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/dev/types/**/*.ts",
    "vitest.setup.ts",
    "vitest.config.mjs"
  ],
  "exclude": ["node_modules"]
}
